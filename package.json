{
  "name": "@openapi-integration/schema-resolver",
  "version": "0.1.0",
  "description": "A tool for resolving openAPI json schema to typescript type definition.",
  "main": "lib/index.js",
  "module": "module/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "rm -rf dist && tsc",
    "release": "rm -rf lib/ && rm -rf module/ && rollup -c rollup.config.ts",
    "prepare": "npm run build && npm run release && npm test"
  },
  "files": [
    "dist",
    "lib",
    "module",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:teobler/openapi-schema-resolver.git"
  },
  "homepage": "https://github.com/teobler/openapi-schema-resolver#readme",
  "bugs": {
    "url": "https://github.com/teobler/openapi-schema-resolver/issues"
  },
  "keywords": [
    "swagger",
    "schema",
    "OpenAPI",
    "code generator",
    "TypeScript"
  ],
  "author": "teobler",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@openapi-integration/openapi-schema": "0.0.6",
    "@types/jest": "^27.0.2",
    "@types/lodash-es": "^4.17.5",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.2.4",
    "babel-plugin-pure-calls-annotation": "^0.4.2",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "rollup": "^2.57.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$",
    "collectCoverage": true,
    "moduleNameMapper": {
      "^lodash-es$": "lodash",
      "^test/(.*)$": "<rootDir>/test/$1",
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/__types__/**",
      "!src/__tests__/**",
      "!src/index.ts"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest",
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
