{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "example", "**/__tests__/**", "rollup.config.ts"]
}
